<h1>The Wall</h1>
<hr>
<span>Welcome <strong><%= session[:first_name] %> !</strong></span><br>
<a href="/users/logout">Logout</a> <br><br>
<form action="/posts/create" method="post" id="create_post_form">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <textarea name="message" id="textarea_post_input" cols="40" rows="5"></textarea> <br>
    <input type="submit" value="Post">
</form>
<div id="wall_container">
    <%= render :partial => "posts/partials/post_lists.html.erb", :locals => { :posts => @all_posts } %>
</div>